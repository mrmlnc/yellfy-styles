// Scaffolding

// Reset the box-sizing
html {
  box-sizing: border-box;
}

*,
*::before,
*::after {
  box-sizing: inherit;
}

// Reset body styles
html {
  font-size: font-size-root;
  -ms-overflow-style: scrollbar;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  background-color: body-bg;
  color: body-color;
  font-family: font-family-base;
  font-size: font-size-base;
  line-height: line-height;
}

// Links
a {
  color: link-color;
  text-decoration: none;

  &:hover,
  &:focus {
    color: link-hover-color;
  }

  &:not([tabindex]):focus {
    outline: none;
  }
}

// Horizontal rules
hr {
  box-sizing: content-box;
  margin-top: (spacer * 2);
  margin-bottom: (spacer * 2);
  border: 0;
  border-bottom: hr-border-width solid hr-border-color;
}

// Lists
ul,
ol,
dl {
  margin-top: 0;
  margin-bottom: spacer;
}

ul ul,
ol ol,
ul ol,
ol ul {
  margin-bottom: 0;
}

// Fieldset
fieldset {
  min-width: 0;
  margin: 0;
  padding: 0;
  border: 0;
}

// Label
label {
  display: inline-block;
  margin-bottom: (spacer / 2);
}

// Legend
legend {
  display: block;
  width: 100%;
  margin-bottom: (spacer / 2);
  padding: 0;
}

// Textarea
textarea {
  resize: vertical;
}

// Responsive images
img {
  display: block;
  max-width: 100%;
  height: auto;
}

// Avoid 300ms click delay on touch devices that support the `touch-action` CSS property.
a,
area,
button,
[role="button"],
input,
label,
select,
summary,
textarea {
  touch-action: manipulation;
}

// Remove most spacing between table cells. No longer part of Normalize since v4.
table {
  border-spacing: 0;
  border-collapse: collapse;
}
