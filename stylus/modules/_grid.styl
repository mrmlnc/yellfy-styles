// Grid system

.area {
  xy-make-container(grid-gutter-width);
  xy-make-container-width(grid-breakpoint-sm, grid-area-sm);
  xy-make-container-width(grid-breakpoint-md, grid-area-md);
  xy-make-container-width(grid-breakpoint-lg, grid-area-lg);

  .row {
    xy-make-row(grid-gutter-width);
  }
}

.col {
  xy-make-column(grid-gutter-width);
  xy-make-columns-width(xs, grid-columns-count);

  // @media (min-width: grid-breakpoint-sm) {
  //   xy-make-columns-width(sm, 12);
  // }
}
